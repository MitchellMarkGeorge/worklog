{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": ["src/renderer/env.d.ts", "src/renderer/**/*"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/*"]
    }
  }
}
